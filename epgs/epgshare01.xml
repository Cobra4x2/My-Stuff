name: EPG Share 01 Fetcher

on:
  push:
    branches:
      - main
    paths:
      - 'py/epgshare01_fetcher.py'
  pull_request:
    branches:
      - main
  schedule:
    - cron: '0 2 * * *'  # Run daily at 2am
  workflow_dispatch:

jobs:
  fetch_epgshare01:
    name: Fetch EPG from EPG Share 01
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.x'

      - name: Install Dependencies
        run: |
          python -m pip install --upgrade pip
          pip install requests beautifulsoup4 pytz

      - name: Run EPG Share 01 Fetcher
        run: |
          python py/epgshare01_fetcher.py > en/epgshare01.xml
        env:
          TZ: America/Vancouver  # Set the timezone

      - name: Commit and Push Changes
        uses: stefanzweifel/git-auto-commit-action@v4
        with:
          commit_message: "Update EPG Share 01 data"
          files: |
            en/epgshare01.xml
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
